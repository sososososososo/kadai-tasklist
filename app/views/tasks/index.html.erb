<h1>Task List</h1>


  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>Status</th>
        <th>Task</th>
      </tr>
    </thead>
    <tbody>
      
<% @tasks.each do |task| %>

        <tr>
          <td>
<%= link_to task.id, task %>
</td>
          <td>
<%= task.status %>
</td>
          <td>
<%= task.content %>
</td>
        </tr>
      
<% end %>

    </tbody>
  </table>
<%= paginate @tasks %>
<br>

<%= link_to 'new task', new_task_path, class: "btn btn-primary" %>





